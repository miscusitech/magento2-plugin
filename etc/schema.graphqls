type Query {
    satispayPayment(cart_id: String!): SatispayPayment
    @resolver(class: "Satispay\\Satispay\\Model\\Resolver\\PaymentRequest")

    getSatispayPayment(payment_id: String!): SatispayPayment
    @resolver(class: "Satispay\\Satispay\\Model\\Resolver\\PaymentStatus")
}

type SatispayPayment {
    payment_id: String,
    amount: Float,
    status: StatusEnum
}

enum StatusEnum {
    PENDING
    ACCEPTED
    CANCELED
    AUTHORIZED
}
